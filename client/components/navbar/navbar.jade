md-sidenav.md-sidenav-left(md-component-id='left', md-is-locked-open="$mdMedia('gt-md')", md-whiteframe='4')
	md-toolbar.md-theme-indigo
		h1.md-toolbar-tools Teach TV
	md-content(ng-controller='LeftCtrl')
		md-list(ng-cloak)
			md-list-item.md-1-line(ng-click='')
				a(href="#").md-button
					md-icon(md-font-icon="fa fa-pencil") 
					| Assessment
			md-list-item.md-1-line(ng-click='')
				a(href="#").md-button
					md-icon(md-font-icon="fa fa-users") 
					| Classroom Behaviour


//- md-navbar.md-menu-toolbar
	| Toolbar

//- div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarController')
	div.container
		div.navbar-header
			button.navbar-toggle(type='button', ng-click='nav.isCollapsed = !nav.isCollapsed')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/') angular-fullstack-grunt-test

		div#navbar-main.navbar-collapse.collapse(collapse='nav.isCollapsed')
			ul.nav.navbar-nav
				li(ng-repeat='item in nav.menu', ui-sref-active='active')
					a(ui-sref='{{item.state}}') {{item.title}}

				li(ng-show='nav.isAdmin()', ui-sref-active='active')
					a(ui-sref='admin') Admin

			ul.nav.navbar-nav.navbar-right
				li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
					a(ui-sref='signup') Sign up

				li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
					a(ui-sref='login') Login

				li(ng-show='nav.isLoggedIn()')
					p.navbar-text Hello {{ nav.getCurrentUser().name }}

				li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
					a(ui-sref='settings')
						span.glyphicon.glyphicon-cog

				li(ng-show='nav.isLoggedIn()')
					a(ui-sref='logout') Logout
